<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2C3E50"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        tools:context=".ClientActivity">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:hint="@string/name"
            android:inputType="text"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_mobile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:background="@color/white"
            android:hint="@string/mobile"
            android:inputType="text"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/edit_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_name" />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:hint="@string/date"
            android:inputType="date"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/edit_mobile"
            app:layout_constraintTop_toBottomOf="@id/edit_name" />

        <EditText
            android:id="@+id/edit_contact"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:hint="@string/contact"
            android:inputType="text"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_mobile" />

        <EditText
            android:id="@+id/edit_issue_desc"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:hint="@string/edit_issue_desc"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/edit_contact" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="32dp"
            android:background="@color/white"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/edit_issue_desc"
            tools:layout_editor_absoluteX="24dp" />

        <Button
            android:id="@+id/btn_payment"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/payment_form"
            android:backgroundTint="#1F7A06"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_not_paid"
            android:layout_marginStart="48dp"
            app:layout_constraintBottom_toBottomOf="@id/btn_payment"
            app:layout_constraintStart_toEndOf="@id/btn_payment"
            app:layout_constraintTop_toTopOf="@id/btn_payment" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/btn_payment"
            tools:layout_editor_absoluteX="24dp" />

        <RadioButton
            android:id="@+id/radio_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:background="@color/white"
            android:text="@string/done"
            app:layout_constraintEnd_toStartOf="@+id/edit_date_finished"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <EditText
            android:id="@+id/edit_date_finished"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:hint="@string/date"
            android:inputType="date"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/radio_done"
            app:layout_constraintTop_toBottomOf="@id/view2" />


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#f00"
            android:text="@string/cancel"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintEnd_toStartOf="@id/btn_save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_date_finished" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="@string/save"
            app:layout_constraintHorizontal_weight="5"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_cancel"
            app:layout_constraintStart_toEndOf="@id/btn_cancel" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
