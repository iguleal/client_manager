<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClientManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bordo_claro</item>
        <item name="colorPrimaryVariant">@color/bordo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bordo</item>
        <item name="colorSecondaryVariant">@color/bordo_claro</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EDIT_TEXT">
        <item name="android:textColor">@color/bordo</item>
        <item name="android:textColorHint">@color/bordo</item>
    </style>
</resources>